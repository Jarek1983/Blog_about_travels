<div class="row">
	<div class="col"></div>
	<div class="col-md-10">
	<%= image_tag '01.jpg', style: "width:50%;" %>
		<p>
			<h2>TITLE</h2><br>
			<strong><%= @article.title %></strong>
		</p>
		<p>
			<%= @article.created_at.strftime('%A %-B %-d, %Y | %l:%M %p') %>
		</p>
		<p>
			<h3>ARTICLE</h3><br>
			<%= @article.text %>
		</p>
	<hr>
			<%= render 'comments/comment' %>
			<% if current_user %>
	<hr>
			<%= render 'comments/form' %>
			<% else %>
			Please <%= link_to 'Sign In', new_session_path %> or 
			<%= link_to 'Sign Up', new_user_path %> to created a comment.
			<% end %>
		<p><br>
			<%= link_to 'Back', articles_path, class: 'btn btn-md btn-info' %>
			<%= link_to 'Home', welcome_index_path, class: 'btn btn-md btn-primary' %>
		</p>
	</div>
	<div class="col"></div>
</div>